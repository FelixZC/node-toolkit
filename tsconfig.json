{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "allowJs": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "baseUrl": ".",
    "types": ["jest", "jscodeshift", "node"],
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "outDir": "./dist",
    "declaration": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "removeComments": false,
    "rootDir": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@app/*": ["src/app/*"],
      "@assets/*": ["src/assets/*"],
      "@common/*": ["src/common/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@language/*": ["src/language/*"],
      "@redux/*": ["src/redux/*"],
      "@router/*": ["src/router/*"]
    }
  },
  "include": [
    "src/**/*",
    "types/*.d.ts",
  ],
  "exclude": ["dist", "node_modules", ".history"]
}
