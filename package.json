  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ]
  },
  "engines": {
    "node": ">= 10.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "build": {
    "productName": "node-toolkit",
    "appId": "node.toolkit.electron.app",
    "directories": {
      "output": "./dist/win"
    },
    "files": [
      "./package.json",
      "./dist/build/**/*",
      "./dist/main/**/*"
    ],
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./public/electron-logo1.ico",
      "uninstallerIcon": "./public/electron-logo2.ico",
      "installerHeaderIcon": "./public/electron-logo1.png",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "node-toolkit"
    },
    "win": {
      "icon": "./public/electron-logo1.ico",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "target": "nsis"
    },
    "electronDist": "./electron"
  }
}
